<div class="max-w-<%= @max_width %> px-4 pb-4 sm:px-6 md:px-8 md:pb-0">
  <div class="flex flex-col justify-start space-y-4 md:flex-row md:justify-between md:items-center md:pb-6 md:space-y-0">
    <h1 class="text-2xl font-semibold text-gray-800"><%= content %></h1>
    <% if actions.any? %>
      <div class="flex flex-col-reverse justify-stretch space-y-4 space-y-reverse sm:flex-row-reverse sm:justify-end sm:space-x-reverse sm:space-y-0 sm:space-x-3 md:mt-0 md:flex-row md:space-x-3">
        <% actions.each do |action| %>
          <%= action %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
