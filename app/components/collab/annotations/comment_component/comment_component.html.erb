<div class="flex text-sm text-gray-500 space-x-4<%= (@counter > 1) ? " border-t border-gray-200" : nil %> py-5<%= @highlight ? " animate-highlight" : nil %>">
  <div class="flex flex-shrink-0 items-center justify-center <%= @comment.collaborator ? "bg-brand-lightest" : "bg-gray-100" %> h-10 w-10 rounded-full">
    <i class="ph-user text-lg <%= @comment.collaborator ? "text-brand" : "text-gray-400" %>"></i>
  </div>
  <div>
    <h3 class="font-medium text-gray-800"><%= @comment.collaborator ? @comment.collaborator.name : t("activerecord.models.user", count: 1) %></h3>
    <p><time datetime="<%= @comment.created_at.iso8601 %>"><%= helpers.datetime_with_zone(datetime: @comment.created_at, timezone: @timezone) %></time></p>
    <div class="mt-4 prose prose-sm max-w-none text-gray-500">
      <p><%= @comment.message %></p>
    </div>
  </div>
</div>
