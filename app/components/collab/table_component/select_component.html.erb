<div class="max-w-xs md:flex md:justify-between md:space-x-2 md:items-center md:flex-row md:w-full">
  <%= label_tag(@attribute, @label.presence || @attribute, class: "text-sm font-medium text-gray-700") %>
  <%=
    select_tag(
      @attribute,
      options_for_select(@options, selected: @selected),
      class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-brand focus:border-brand sm:text-sm rounded-md cursor-pointer",
      data: {action: @action}
    )
  %>
</div>
