<div aria-live="assertive" class="fixed inset-0 flex items-end px-4 py-6 pointer-events-none sm:p-6 sm:items-end z-50" data-controller="flash-component">
  <div class="w-full flex flex-col items-center space-y-4 sm:items-end">
    <div class="flash max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden">
      <div class="p-4">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <% if @negative %>
              <i class="ph-warning-circle text-brand text-2xl"></i>
            <% else %>
              <i class="ph-check-circle text-positive text-2xl"></i>
            <% end %>
          </div>
          <div class="ml-3 w-0 flex-1 pt-0.5">
            <p class="text-sm font-medium text-gray-800">
              <%= @text %>
            </p>
          </div>
          <div class="ml-4 flex-shrink-0 flex">
            <button
              data-action="flash-component#dismiss"
              class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand">
              <span class="sr-only"><%= t("layouts.collab.flash_component.close") %></span>
              <i class="ph-x text-lg"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
