<% content_for :title, @status_code %>
<div class="p-6 flex flex-col items-center h-screen">
  <div class="flex-grow-0 flex-shrink-0">
    <%= image_tag("logo.svg", class: "h-7.5 w-auto", alt: "MyFoodRepo") %>
  </div>
  <div class="flex items-center flex-grow flex-shrink-0">
    <div class="flex flex-col items-center">
      <span class="block text-8xl font-semibold tracking-tight"><%= @status_code %></span>
      <p class="block mt-2 text-base text-gray-500"><%= t(".messages.#{@status_code}") %></p>
      <%= link_to t(".go_to_home_button"), root_path, class: "btn btn-primary mt-6" %>
    </div>
  </div>
</div>
