<%= form_for([:collab, food_set], builder: AppFormBuilder) do |f| %>
  <div class="shadow sm:rounded-md sm:overflow-hidden">
    <div class="bg-white py-6 px-4 sm:p-6">
      <div class="grid grid-cols-4 gap-6">
        <%= f.input :cname, input_html: {autofocus: true, required: true} %>
        <% I18n.available_locales.each do |locale| %>
          <%= f.input "name_#{locale}", label: {text: "#{FoodSet.human_attribute_name(:name)} #{t(locale, scope: "locales")}"}, input_html: {required: true} %>
        <% end %>
      </div>
    </div>
    <%= f.submit_input %>
  </div>
<% end %>
