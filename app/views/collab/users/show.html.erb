
  <div class="px-4 sm:px-6 md:px-8">
    <%= render(Collab::DetailsComponent.new) do |t| %>
      <% t.with_title { t(".details") } %>
      <% t.with_detail(label: t("activerecord.attributes.user.id"), value: @user.id) %>
      <% t.with_detail(label: t("activerecord.attributes.user.email"), value: @user.email) %>
      <% t.with_detail(label: t("activerecord.attributes.user.created_at"), value: l(@user.created_at, format: :long)) %>
    <% end %>

    <% if policy([:collab, @anonymize_service]).update? || policy([:collab, @user]).destroy? %>
      <div class="bg-white mt-6 shadow sm:rounded-lg border-2 border-red-400">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-bold text-red-400">
            <%= t(".danger_zone") %>
          </h3>
        </div>
        <% if policy([:collab, @anonymize_service]).update? %>
          <div class="border-t-2 border-red-400 px-4 py-5 sm:px-6">
            <div class="mt-2">
              <%=
                button_to(
                  t(".anonymize.button"),
                  collab_user_anonymizes_path(@user),
                  method: :patch,
                  data: {
                    turbo_confirm: "#{t("helpers.are_you_sure")} #{t(".anonymize.help")}"
                  },
                  class: "btn btn-primary"
                )
              %>
            </div>
            <div class="mt-2 max-w-xl text-sm text-gray-500">
              <p>
                <%= t(".anonymize.help") %>
              </p>
            </div>
          </div>
      <% end %>
      <% if policy([:collab, @user]).destroy? %>
        <div class="border-t-2 border-red-400 px-4 py-5 sm:px-6">
          <div class="mt-2">
            <%=
              button_to(
                t(".destroy.button"),
                collab_user_path(@user),
                method: :delete,
                data: {
                  turbo_confirm: "#{t("helpers.are_you_sure")} #{t(".destroy.help")}"
                },
                class: "btn btn-primary"
              )
            %>
          </div>
          <div class="mt-2 max-w-xl text-sm text-gray-500">
            <p>
              <%= t(".destroy.help") %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
