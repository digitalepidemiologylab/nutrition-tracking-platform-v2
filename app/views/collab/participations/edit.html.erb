<div class="py-6">
  <%= render(Collab::TitleComponent.new(max_width: "5xl")) do |t| %>
    <%= t(".title") %>
    <% t.with_action { link_to t("helpers.cancel"), collab_cohort_path(@cohort), class: "btn btn-secondary" } %>
  <% end %>
  <div class="max-w-5xl px-4 sm:px-6 md:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <%= render "form", cohort: @cohort, participation: @participation %>
    </div>
    <div class="bg-white mt-6 shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-800">
          <%= t(".destroy.title") %>
        </h3>
        <div class="mt-2 max-w-xl text-sm text-gray-500">
          <p>
            <%= t(".destroy.help") %>
          </p>
        </div>
        <div class="mt-5">
          <%=
            button_to(
              t(".destroy.button"),
              collab_cohort_participation_path(@cohort, @participation),
              method: :delete,
              data: {
                turbo_confirm: t("helpers.are_you_sure")
              },
              class: "btn btn-primary"
            )
          %>
        </div>
      </div>
    </div>
  </div>
</div>
