<div class="py-6">
  <%= render(Collab::TitleComponent.new) { t(".title") } %>
  <div class="px-4 sm:px-6 md:px-8">
    <%= render(Collab::TableComponent.new) do |tc| %>
      <% tc.with_head_td { t("activerecord.attributes.collaborator.name") } %>
      <% tc.with_head_td { t("activerecord.attributes.collaborator.email") } %>
      <% tc.with_head_td(align: :right) { t("activerecord.attributes.collaborator.admin") } %>
      <% @collaborators.each do |collaborator| %>
        <% tc.with_row do |r| %>
          <% r.with_row_td(additional_classes: "font-medium text-gray-800") { collaborator.name } %>
          <% r.with_row_td(additional_classes: "text-gray-500") { collaborator.email } %>
          <% r.with_row_td(additional_classes: "text-right text-gray-500") do %>
            <%= render(BooleanIconComponent.new(collaborator.admin?)) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
