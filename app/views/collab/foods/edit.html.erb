<div class="py-6">
  <%= render(Collab::TitleComponent.new(max_width: "5xl")) do |t| %>
    <%= t(".title") %>
    <% t.with_action { link_to(t("helpers.cancel"), collab_food_path(@food), class: "btn btn-secondary") } %>
  <% end %>
  <div class="max-w-5xl px-4 sm:px-6 md:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <%= render "form", food: @food, food_lists: @food_lists, food_nutrients: @food_nutrients, remaining_nutrients: @remaining_nutrients %>
    </div>
  </div>
</div>
