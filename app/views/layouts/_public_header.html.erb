<div class="relative">
  <div class="flex justify-between px-5 py-5 sm:px-8 sm:py-8">
    <%= render(DropdownComponent.new(size: :large, origin: :right)) do |c| %>
      <%= c.with_text { I18n.locale.to_s.upcase } %>
      <%= c.with_icon(:globe, classes: "mr-2 text-lg text-gray-400") %>
      <% I18n.available_locales.map do |locale| %>
        <%= c.with_item(text: t("dropdown_language_component.language_name", locale: locale), url: url_for(request.query_parameters.merge(locale: locale)), active: I18n.locale == locale) %>
      <% end %>
    <% end %>
    <%= link_to image_tag("logo.svg", class: "h-6 w-auto sm:h-8 xl:h-10", alt: "MyFoodRepo"), root_path %>
    <div>
      <% if collaborator_signed_in? %>
        <div class="btn text-sm font-medium text-gray-700 rounded-md sm:mt-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-brand">
          <%= current_collaborator.name %>
          (<%= button_to(t(".sign_out"), destroy_collaborator_session_path, method: :delete, class: "text-brand focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-brand", form_class: "inline") %>)
        </div>
      <% else %>
        <%= link_to t(".sign_in"), new_collaborator_session_path, class: "btn text-sm font-medium text-gray-700 rounded-md sm:mt-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-brand" %>
      <% end %>
    </div>
  </div>
</div>
